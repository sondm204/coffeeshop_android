<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- Tin nhắn Bot (bên trái) -->
    <LinearLayout
        android:id="@+id/bot_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:maxWidth="280dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/bot_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_bubble_bot"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="gone"
            android:padding="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bot_products_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="4dp"
            android:overScrollMode="never"
            android:scrollbars="none"/>
    </LinearLayout>

    <!-- Tin nhắn User (bên phải) -->
    <LinearLayout
        android:id="@+id/user_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:maxWidth="280dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/user_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_bubble_user"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:visibility="gone"
            android:padding="8dp"/>
    </LinearLayout>
</FrameLayout>
